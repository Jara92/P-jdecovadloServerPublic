<!DOCTYPE html>
<html>
<head lang="cs">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Půjčovadlo.cz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    @* Only development resources *@
    <environment include="Development">

    </environment>

    @* Only production resources *@
    <environment exclude="Development">

    </environment>

    <style>
        .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }
        
        .login-button{
            background-color: #FF5733;
            border-color: #ea5a39;
            color:  white;
         }
         
         .login-button:hover{
            background-color: #ec6449;
            border-color: #ea5a39;
            color:  white;
         }
        
        @*@@media (min-width: 1025px) {
            .h-custom-2 {
                height: 100%;
            }
        }*@
    </style>
</head>
<body>

<section class="flash-messages">
    @if (TempData.ContainsKey("Errors") && TempData["Errors"] != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var errorMessage in TempData["Errors"] as IEnumerable<string>)
                {
                    <li>@errorMessage</li>
                }
            </ul>
        </div>
    }
</section>

<section>
    @RenderBody()
</section>

@RenderSection("Scripts", required: false)
</body>
</html>