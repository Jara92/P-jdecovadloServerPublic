@using PujcovadloServer.Business.Enums
<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
    <!--begin::Sidebar Brand-->
    <div class="sidebar-brand">
        <!--begin::Brand Link-->
        <a href="./index.html" class="brand-link">
            <!--begin::Brand Image--> @*<img src="~/assets/admin/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image opacity-75 shadow">*@ <!--end::Brand Image-->
            <!--begin::Brand Text--> <span class="brand-text fw-light">Půjčovadlo.cz</span> <!--end::Brand Text-->
        </a> <!--end::Brand Link-->
    </div> <!--end::Sidebar Brand--> <!--begin::Sidebar Wrapper-->
    <div class="sidebar-wrapper">
        <nav class="mt-2">
            <!--begin::Sidebar Menu-->
            <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a asp-action="dashboard" asp-controller="Home" class="nav-link active">
                        <i class="nav-icon bi bi-speedometer"></i>
                        <p>@Localizer["Dashboard"]</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon bi bi-box-seam-fill"></i>
                        <p>
                            @Localizer["Items"]
                            <i class="nav-arrow bi bi-chevron-right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Item" class="nav-link">
                                <i class="nav-icon bi bi-circle"></i>
                                <p>@Localizer["All items"]</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Item" asp-route-filter.status="@ItemStatus.Approving" class="nav-link">
                                <i class="nav-icon bi bi-circle"></i>
                                <p>@Localizer["Approving items"]</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul> <!--end::Sidebar Menu-->
        </nav>
    </div> <!--end::Sidebar Wrapper-->
</aside> 

