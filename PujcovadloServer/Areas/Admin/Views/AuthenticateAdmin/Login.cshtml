@model PujcovadloServer.Authentication.LoginRequest

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <h1 class="h1 fw-bold mb-0">Půjčovadlo.cz</h1>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-action="PerformLogin" style="width: 23rem;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control form-control-lg"/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block login-button" type="submit">Login</button>
                        </div>

                        <p class="small mb-5 pb-lg-2">
                            <a class="text-muted" href="#!">Forgotten password?</a>
                        </p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block vh-100" style="background-color: #FF5733">
                @*<img src="" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">*@
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}